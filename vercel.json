{
  "rewrites": [
    { 
      "source": "/api/:path*", 
      "destination": "https://expense-tracker-backend-xi-one.vercel.app/api/:path*" 
    },
    { "source": "/(.*)", "destination": "/" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" }
      ]
    }
  ]
}
